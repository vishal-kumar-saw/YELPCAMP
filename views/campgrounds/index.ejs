<% layout('layouts/boilerplate') %>
<h1>All Campgrounds</h1>
<div>
    <a href="/campgrounds/new">New Campground</a>
</div>
<% for( let campground of campgrounds ) { %>
<div class="card mb-3">
    <div class="row">
        <div class="col-md-4">
            <% if(campground.images.length){ %> 
            <img src="<%= campground.images[0].url %> " alt="Campground Image" class="img-fluid">
            <% }else{ %> 
            <img src="https://res.cloudinary.com/dnxbj6pvp/image/upload/v1626100424/YelpCamp/icqhvdqo5yce0z9zqntk.jpg" alt="Campground Image" class="img-fluid">
            <% } %> 
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title">
                    <%= campground.title %>
                </h5>
                <p class="card-text">
                    <%= campground.description%>
                </p>
                <p class="card-text">
                    <small class="text-muted">
                    <%= campground.location %>
                    </small>
                </p>
                <a href="campgrounds/<%= campground._id %> " class="btn btn-primary">
                View <%= campground.title %>
                </a>
            </div>
        </div>
    </div>
</div>
<% } %>